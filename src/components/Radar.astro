--- 
interface Props {
	size: string;
}

const { size } = Astro.props;
---

<div class="flex z-[-1] fixed w-full h-full left-0 top-0">
    <div class="m-auto w-1/2 pb-[50%] relative">
		<div class="circle" style="animation-delay: -15s"></div>
		<div class="circle" style="animation-delay: -10s"></div>
		<div class="circle" style="animation-delay: -5s"></div>
		<div class="circle" style="animation-delay: 0s"></div>
		<!-- <div class="absolute w-full h-full"></div> -->
    </div>
</div>

<style define:vars={{ size }}>
	.circle {
		border-radius: 50%;
		position: absolute;
		height: 100%;
		width: 100%;
		opacity: 0;
		animation: scaleIn 20s infinite cubic-bezier(.36, .11, .89, .32);
		background: radial-gradient(closest-side, rgba(0, 0, 0, 0), blue);
	}
	@keyframes scaleIn {
		from {
			transform: scale(0, 0);
			opacity: .5;
		}
		to {
			transform: scale(1, 1);
			opacity: 0;
		}
	}
</style>

