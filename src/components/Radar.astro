---
import AvatarsCircle from "../react/AvatarsCircle";

interface Props {
  size: string;
}

const { size } = Astro.props;
---

<div class="flex fixed w-full h-full left-0 top-0">
  <div class="m-auto sm:w-1/2 sm:pb-[50%] w-full pb-[100%] relative">
    <div class="z-[-1]">
      <div class="circle" style="animation-delay: -15s"></div>
      <div class="circle" style="animation-delay: -10s"></div>
      <div class="circle" style="animation-delay: -5s"></div>
      <div class="circle" style="animation-delay: 0s"></div>
    </div>
    <AvatarsCircle client:only="react" />
  </div>
</div>

<style define:vars={{ size }}>
  .circle {
    border-radius: 50%;
    position: absolute;
    height: 100%;
    width: 100%;
    opacity: 0;
    animation: scaleIn 20s infinite cubic-bezier(0.36, 0.11, 0.89, 0.32);
    background: radial-gradient(closest-side, rgba(0, 0, 0, 0), #006fee);
  }

  @media (min-width: 640px) {
    @keyframes scaleIn {
      from {
        transform: scale(0, 0);
        opacity: 0.5;
      }
      to {
        transform: scale(1, 1);
        opacity: 0;
      }
    }
  }

  @media (max-width: 640px) {
    @keyframes scaleIn {
      from {
        transform: scale(0, 0);
        opacity: 0.5;
      }
      to {
        transform: scale(1.5, 1.5);
        opacity: 0;
      }
    }
  }
</style>
