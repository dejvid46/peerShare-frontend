    .circle {
        position: absolute;
        left: calc(50% - 25px);
        top: calc(50% - 25px);
        height: 50px;
        width: 50px;
        border: 2px solid blue;
        border-radius: 50%;
    }

    .circle:nth-child(1) {
        transform: translateX(100%);
    }

    .circle:nth-child(2) {
        transform: rotate(72deg) translateX(100%);
    }

    .circle:nth-child(3) {
        transform: rotate(144deg) translateX(100%);
    }

