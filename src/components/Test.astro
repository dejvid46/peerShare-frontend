<div class="grid">
  <div class="box"></div>
  <div class="box"></div>
  <div class="box">1</div>
  <div class="box">2</div>
  <div class="box">3</div>
  <div class="box">4<br>4<br>4</div>
  <div class="box">5</div>
</div>


<style>
  .grid {
    display: grid;
    background-color: #eee;
    grid-gap: 0px 5px;
    grid-template-columns: 1fr 1fr;
    grid-auto-flow: dense;
  }

  .box {
    background-color: #444;
    color: #fff;
    border-radius: 5px;
    padding: 60px;
    font-size: 150%;
  }

  .box:not(:first-child) {
    grid-row: span 2;
  }
  .box:nth-child(-n+2){
    padding: 0px;
    visibility: hidden;
  }
  .box:nth-child(n + 3):not(:last-child) {
    margin-bottom: 5px;
  }
</style>